&CONTROL
calculation = 'relax' ,
restart_mode = 'from_scratch' ,
outdir = '/tmp' ,
pseudo_dir = './', 
prefix = 'H-0.75' ,
verbosity = 'low'
/
&SYSTEM
  ibrav = 0,
  nat  = 2,
  ntyp = 1,
  ecutwfc = 80,
  ecutrho=800,
  starting_magnetization(1)=0.3,
  occupations='smearing',
  smearing='methfessel-paxton',
  degauss=0.02,
  /
&ELECTRONS
  electron_maxstep = 400,
  conv_thr = 1.0d-6
  diagonalization  = 'cg'
/
&IONS
ion_dynamics= 'bfgs',
/
ATOMIC_SPECIES
H   1.00794    H.pbe-rrkjus.UPF
ATOMIC_POSITIONS  (angstrom)
H   5  5  5	
H   5  5.75  5  
CELL_PARAMETERS {angstrom}
   10.0  0.00  0.00	
   0.00  10.0  0.00	
   0.00  0.00  10.0
K_POINTS gamma
1  1  1  1  1  1   
